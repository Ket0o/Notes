<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Notes" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" MinWidth="150"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" 
              ShowGridLines="True"
              Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="Find:"
                           Margin="0, 0, 3, 0"/>
                <TextBox Grid.Column="1"
                         Background="LightGray"/>
            </Grid>
            <Grid Grid.Row="1">
                <ListBox Margin="3"
                         Background="LightGray"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" 
              ShowGridLines="True" 
              Margin="50,3,50,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBox FontSize="50"
                         BorderBrush="Transparent"
                         Text="Note"/>
            </Grid>
            <Grid Grid.Row="1"
                  Margin="0, 20, 0, 0">
                <FlowDocumentScrollViewer Margin="0" Height="340">
                    <FlowDocument>
                        <Paragraph>
                            1321312132131213213121321312132131132131213213121321312132131213213113213121321312418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,139375418,
                        </Paragraph>
                    </FlowDocument>
                </FlowDocumentScrollViewer>
            </Grid>
        </Grid>
        <GridSplitter Grid.Column="0" Width="2" Background="White"/>
    </Grid>
</Window>
